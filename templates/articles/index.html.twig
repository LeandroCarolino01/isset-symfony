{% extends 'base.html.twig' %}

{% block title  %}Isset {% endblock %}
{% block body %}
    {% if articles %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>article title</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>
                        <a href="/article/{{ article.id }}" class="btn btn-primary">Show More</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}